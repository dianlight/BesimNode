{
  "name": "@mikro-orm/getting-started",
  "version": "6.0.0",
  "type": "module",
  "description": "MikroORM Getting Started guide",
  "repository": "https://github.com/mikro-orm/guide",
  "author": "Martin Adamek",
  "license": "MIT",
  "homepage": "https://mikro-orm.io/docs/guide",
  "dependencies": {
    "@fastify/jwt": "^9.0.1",
    "@fastify/swagger": "^9.1.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@mikro-orm/core": "6.3.13",
    "@mikro-orm/migrations": "6.3.13",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@mikro-orm/sqlite": "6.3.13",
    "argon2": "^0.41.1",
    "commander": "^12.1.0",
    "fastify": "^5.0.0",
    "fastify-decorators": "^3.16.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@mikro-orm/cli": "6.3.13",
    "@mikro-orm/reflection": "6.3.13",
    "@mikro-orm/seeder": "6.3.13",
    "@types/node": "^22.7.5",
    "@types/slug": "^5.0.9",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "5.6.2",
    "vitest": "^2.1.2"
  },
  "scripts": {
    "clean": "rimraf dist temp *.db",
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && npx mikro-orm-esm cache:generate --combined",
    "start": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/server.ts",
    "dev": "nodemon src/server.ts",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "vitest run"
  },
  "nodemonConfig": {
    "ignore": [
      "**/test/**",
      "**/docs/**",
      "**/temp/**",
      "**/dist/**"
    ],
    "watch": [
      "**/src/**",
      "package.json"
    ],
    "execMap": {
      "ts": "node --no-warnings=ExperimentalWarning --loader ts-node/esm"
    }
  }
}
